<p id="notice"><%= notice %></p>

<div><%= link_to 'New Post', new_post_path%></div>
<br>

<% @posts.each_slice(4) do |arr| %>
<div class="row">
<% arr.each do |post|%>
  <div class="col-md-3 col-sm-6 col-xs-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= post.title %>
      </div>
      <div class="panel-body">
        <div class="embed-responsive embed-responsive-4by3">
          <%= link_to post_path(post) do %>
            <%=image_tag post.image%>
            <% end %>
        </div>
      </div>
      <div class="panel-footer">
        <div>
          <button class="btn btn-primary" type="button">
            Comentarios <span class="badge"><%= post.comments.count %></span>
          </button>
        </div>
        <br>
        <div>
          <%= link_to 'Show', post, class:"btn btn-info" %>
          <%= link_to 'Edit', edit_post_path(post), class:"btn btn-warning"  %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"  %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
<% end %>



