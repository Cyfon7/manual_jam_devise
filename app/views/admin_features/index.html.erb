<p id="notice"><%= notice %></p>

<h1>Users Control Panel</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <% if user.admin? %>
          <td><%= link_to 'Revoke Admin', admin_features_revoke_admin_path(user) %></td>
        <% else %>
          <td><%= link_to 'Make Admin', admin_features_make_admin_path(user) %></td>
        <% end %>
        <td><%= link_to 'Destroy', user_registration_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
